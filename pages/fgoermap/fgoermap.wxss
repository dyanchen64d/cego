.fgoermap {
  width: 100%;
  display: flex;
  height: 100vh;
  flex-direction: column;
  overflow: hidden;
}

#map {
  width: 100%;
  flex: 1;
}

.profileWrapper {
  position: relative;
  width: 200%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  transition: left .4s;
}

.profileLeft {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
}

.profile {
  width: 50%;
  height: 100%;
  background-color: #576b95;
  color: white;
  line-height: 100rpx;
  text-align: center;
}

.messageInput {
  margin: 6px;
  flex: 1;
}

.messageSubmit {
  width: 200rpx;
  height: 100%;
  background-color: #353535;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}
