.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

image {
  width: 100%;
  flex: 1;
}

.usermotto {
  box-sizing: border-box;
  width: 100%;
  height: 400rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-auto-rows: repeat(2, 1fr);
  grid-column-gap: 2px;
  grid-row-gap: 2px;
  padding: 2px;
}

.griditem {
  background-color: #09bb07;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.noitem {
  background-color: #888888;
  color: #888888;
}
